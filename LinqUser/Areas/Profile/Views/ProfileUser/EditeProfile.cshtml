@model LinqUser.Areas.Profile.Service.ProfileService.EditeProfile.EditeProfileUserDto

@{
    ViewData["Title"] = "ویرایش پروفایل";
}

<h1>ویرایش پروفایل کاربر</h1>

<div>
    @if (!string.IsNullOrEmpty(Model.CurrentProfileImageUrl))
    {
        <img src="@Model.CurrentProfileImageUrl" alt="تصویر پروفایل"
             width="120" height="120"
             style="object-fit: contain; border-radius: 50%;" />
    }
    else
    {
        <p>تصویری موجود نیست.</p>
    }
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditeProfile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ProfileImageUrl" class="control-label">تصویر جدید</label>
                <input type="file" name="ProfileImageUrl" class="form-control" />
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت</a>
</div>